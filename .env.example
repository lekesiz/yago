# YAGO v8.0 - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# For local development, see LOCAL_SETUP.md

# ============================================
# AI PROVIDER API KEYS
# ============================================

# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI API Key (required for Gemini models)
GOOGLE_API_KEY=your-google-api-key-here

# ============================================
# DATABASE CONFIGURATION
# ============================================

# SQLite Database Path (default)
DATABASE_PATH=/app/data/yago.db

# PostgreSQL (optional, comment out if using SQLite)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=yago
# POSTGRES_PASSWORD=your-secure-password-here
# POSTGRES_DB=yago
# DATABASE_URL=postgresql://yago:password@localhost:5432/yago

# ============================================
# REDIS CONFIGURATION
# ============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# SERVER CONFIGURATION
# ============================================

# Backend Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
LOG_LEVEL=info

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:80,https://yourdomain.com

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# API Base URL
VITE_API_BASE_URL=http://localhost:8000

# WebSocket URL
VITE_WS_BASE_URL=ws://localhost:8000

# Environment
NODE_ENV=production

# ============================================
# SECURITY
# ============================================

# Secret Key for JWT tokens
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# ============================================
# COST TRACKING
# ============================================

# Enable cost tracking
ENABLE_COST_TRACKING=true

# Default budget limits
DEFAULT_BUDGET_LIMIT=100.0
BUDGET_ALERT_THRESHOLD=0.8

# ============================================
# BENCHMARKING
# ============================================

# Enable performance benchmarks
ENABLE_BENCHMARKS=true

# Benchmark iterations
DEFAULT_BENCHMARK_ITERATIONS=10

# ============================================
# COLLABORATION
# ============================================

# WebSocket configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Agent timeout (seconds)
AGENT_TIMEOUT=300

# ============================================
# MONITORING & LOGGING
# ============================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Format
LOG_FORMAT=json

# Sentry DSN (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# ============================================
# DOCKER CONFIGURATION
# ============================================

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=yago

# ============================================
# PRODUCTION SETTINGS
# ============================================

# Enable production mode
PRODUCTION=false

# SSL/TLS Configuration
# SSL_CERT_PATH=/etc/ssl/certs/yago.crt
# SSL_KEY_PATH=/etc/ssl/private/yago.key

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD=false

# ============================================
# BACKUP CONFIGURATION
# ============================================

# Backup directory
BACKUP_DIR=/app/backups

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# Auto backup interval (hours)
AUTO_BACKUP_INTERVAL=24
